{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["**/routeTree.gen.ts"],
  "plugins": ["react", "react-perf", "import", "jsx-a11y", "promise"],
  "env": {
    "node": true,
    "browser": true
  },
  "categories": {
    "correctness": "error"
  },
  "rules": {
    "no-default-export": "error",
    "no-children-prop": "off",
    "click-events-have-key-events": "off",
    "no-noninteractive-element-interactions": "off",
    "label-has-associated-control": "off"
  },
  "overrides": [
    {
      "files": ["src/router.tsx", "vite.config.ts", "eslint.config.js"],
      "rules": {
        "no-default-export": "off"
      }
    }
  ]
}
